<div class="containers">
  <div class="row justify-content-center" style="margin-top: 12vh">
    <div class="col-lg-6">
      <div class="card p-3">
        <div class="card-body">
          <h2>Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="mt-2">
                <%= f.input :name,
                            label: false,
                            placeholder: 'Full Name',
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "name" }%>
              </div>
              <div class="mt-2">
                <%= f.input :email,
                          label: false,
                          placeholder: 'Email',
                          required: true,
                          autofocus: false,
                          input_html: { autocomplete: "email" }%>
              </div>
              <div class="mt-2">
                <%= f.input :contact,
                          label: false,
                          placeholder: 'Contact',
                          required: true,
                          autofocus: false,
                          input_html: { autocomplete: "contact" }%>
              </div>
              <div class="mt-2">
                <%= f.input :address,
                          label: false,
                          placeholder: 'Address',
                          required: true,
                          autofocus: false,
                          input_html: { autocomplete: "address" }%>
              </div>
              <div class="mt-2">
                <%= f.input :password,
                          label: false,
                          placeholder: 'Password',
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="mt-2">
                <%= f.input :password_confirmation,
                          label: false,
                          placeholder: 'Retype Password',
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
              </div>
            </div>

            <div class="form-actions mt-3">
              <%= f.button :submit, "Sign up",:class=>"btn btn-info btn-block" %>
            </div>
          <% end %> 
          <div class="mt-3">
            <small class="text-muted">Already have account?
              <%= link_to "Login", new_user_session_path, :class=>"text-muted" %>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>