<% provide(:page_title, 'Manage Records') %>
<%= render 'shared/nav' %>

<div class="container-fluid">
  <div class="row justify-content-center" style="margin-top: 15vh">
    <div class="col-lg-12">
      <div class="card p-3">
        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Service</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><%= @record.id %></th>
                <td><%= @record.client_name %></td>
                <td><%= @record.client_email %></td>
                <td><%= @record.service %></td>
                <td><%= @record.status %></td>
              </tr>
            </tbody>
          </table>
          <% if @record.description? %>
            <div class="mt-4">
              <span class="text-muted">Details</span>
              <p class="lead text-justify"><%= @record.description %></p>
            </div>
          <% end %>
          <div>
          <%= link_to 'Back', records_path %> |
          <%= link_to 'Edit', edit_record_path(@record) %> |
          <%= link_to 'Delete', record_path, method: :delete, data:{confirm: 'Are you sure?'} %> |
          <%= link_to 'Add New Record', new_record_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
