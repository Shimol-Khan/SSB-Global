<% if flash[:notice] %>
    <div id="notice_wrapper">
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert"></button>
            <%= flash[:notice] %>
        </div>
    </div>
<% elsif flash[:error] %>
    <div id="notice_wrapper">
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert"></button>
            <%= flash[:error] %>
        </div>
    </div>
<% elsif flash[:alert] %>
    <div id="notice_wrapper">
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert"></button>
            <%= flash[:alert] %>
        </div>
    </div>
<% end %>